<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FB3636"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Contacting_Activity2">

    <LinearLayout
        android:id="@+id/laysearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtsearch"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="tapez le NUM ou NOM ou l'ENTREPRISE "
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/btnsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FB3636"
            android:hapticFeedbackEnabled="false"
            app:srcCompat="@android:drawable/ic_search_category_default" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layContact"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Nom"
                android:textColor="#510C0C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="tapez le Nom"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layAddresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Addresse"
                android:textColor="#510C0C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="tapez l'addresse"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layTel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Téléphone 1"
                android:textColor="#510C0C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/txtNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="tapez numéro"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layTel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Téléphone 2"
                android:textColor="#510C0C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/txtNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="tapez numéro"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layEntreprise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="tapez l'entreprise"
                android:text="Entreprise"
                android:textColor="#510C0C"
                android:textColorHint="#F3E2E2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/txtEntreprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="tapez le nom de l'entreprise"
                android:inputType="textPersonName" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layNavig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Précédent" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:text="Suivant " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layAppeler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAppeler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appeler" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/contact" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAjout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ajouter" />

        <Button
            android:id="@+id/btnMiseAjour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modifier" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Supprimer" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laysave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAnnuler"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annuler" />

        <Button
            android:id="@+id/btnEnreg"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enregistrer" />
    </LinearLayout>

</LinearLayout>